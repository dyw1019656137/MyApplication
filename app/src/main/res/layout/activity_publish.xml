<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:divider="@drawable/shape"
    android:showDividers="middle"
    android:background="@color/other"
    tools:context="com.example.dyw.myapplication.activity.PublishActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/other"
        android:layout_height="44dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:paddingTop="6dp"
            android:layout_marginTop="@dimen/myself_top_margin"
            android:text="发布房源"
            android:textAlignment="center" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/myself_top_right_margin"
            android:text="房东或称谓"
            android:textColor="@android:color/darker_gray"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/publish_houseOwnerName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/myself_top_right_margin"
            android:layout_weight="2"
            android:background="@drawable/other_feedback_edit"
            android:gravity="center"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/myself_top_right_margin"
            android:text="联系电话（请输入有效电话）"
            android:textColor="@android:color/darker_gray"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/publish_houseOwnerPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/myself_top_right_margin"
            android:layout_weight="2"
            android:background="@drawable/other_feedback_edit"
            android:gravity="center"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/myself_top_right_margin"
            android:text="发布标题"
            android:textColor="@android:color/darker_gray"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/publish_houseOwnerTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/myself_top_right_margin"
            android:layout_weight="2"
            android:background="@drawable/other_feedback_edit"
            android:gravity="center"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/myself_top_right_margin"
            android:text="出租方式(例：2室一厅（整租）)"
            android:textColor="@android:color/darker_gray"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/publish_houseOwnerHow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/myself_top_right_margin"
            android:layout_weight="2"
            android:background="@drawable/other_feedback_edit"
            android:gravity="center"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/myself_top_right_margin"
            android:text="房屋设备(例：床，电视等)"
            android:textColor="@android:color/darker_gray"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/publish_houseOwnerDevice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/myself_top_right_margin"
            android:layout_weight="2"
            android:background="@drawable/other_feedback_edit"
            android:gravity="center"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/myself_top_right_margin"
            android:text="房屋信息(例：普通住宅)"
            android:textColor="@android:color/darker_gray"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/publish_houseOwnerInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/myself_top_right_margin"
            android:layout_weight="2"
            android:background="@drawable/other_feedback_edit"
            android:gravity="center"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/myself_top_right_margin"
            android:text="房屋地理位置(例：xx市xx小区)"
            android:textColor="@android:color/darker_gray"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/publish_houseOwnerLocation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/myself_top_right_margin"
            android:layout_weight="2"
            android:background="@drawable/other_feedback_edit"
            android:gravity="center"
            android:textSize="18dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/myself_top_right_margin"
            android:text="选择房屋图片(三张)"
            android:textColor="@android:color/darker_gray"
            android:textSize="20dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/shape"
            android:showDividers="middle">
            <ImageView
                android:id="@+id/publish_houseOwner_img1"
                android:layout_weight="1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/publishimg"/>
            <ImageView
                android:id="@+id/publish_houseOwner_img2"
                android:layout_weight="1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/publishimg"/>
            <ImageView
                android:id="@+id/publish_houseOwner_img3"
                android:layout_weight="1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/publishimg"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/myself_top_right_margin"
            android:text="房屋租金(单位：元/月)"
            android:textColor="@android:color/darker_gray"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/publish_houseOwnerContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/myself_top_right_margin"
            android:layout_weight="2"
            android:background="@drawable/other_feedback_edit"
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="18dp" />
        <Button
            android:id="@+id/publish_submit"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="@dimen/myself_top_right_margin"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:background="@android:color/holo_green_light"
            android:text="提交"
            android:textSize="25dp"
            android:textColor="@color/white_edit"/>
    </LinearLayout>
    </ScrollView>


</LinearLayout>
