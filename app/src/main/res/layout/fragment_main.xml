<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white_edit"
    android:divider="@drawable/shape"
    android:showDividers="middle">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/other"
        android:layout_marginTop="@dimen/myself_top_margin"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/myself_left_margin"
            android:textSize="25dp"
            android:paddingTop="8dp"
            android:text="南通市"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/down"
            android:layout_marginTop="5dp"
            />
        <SearchView
            android:id="@+id/searchview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:iconifiedByDefault="false"
            android:queryHint="请输入搜索内容">
        </SearchView>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/other">

        <!--<LinearLayout-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:gravity="center"-->
            <!--android:id="@+id/nearby"-->
            <!--android:orientation="vertical"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_height="match_parent">-->
            <!--<ImageView-->
                <!--android:src="@drawable/map"-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="30dp"-->

                <!--/>-->
            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="@string/nearby"-->
                <!--android:textAlignment="center"-->
                <!--android:textSize="15dp"-->
                <!--/>-->
        <!--</LinearLayout>-->

        <LinearLayout
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:id="@+id/publish"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/publish"
                android:layout_width="30dp"
                android:layout_height="30dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我要发布"
                android:textAlignment="center"
                android:textSize="15dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:id="@+id/map"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/allmap"
                android:layout_width="30dp"
                android:layout_height="30dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/map"
                android:textAlignment="center"
                android:textSize="15dp"
                />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/other"
        android:paddingLeft="@dimen/myself_left_margin"
        android:text="@string/main_find"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/main_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </LinearLayout>




</LinearLayout>
