<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/house_main_tab_bottom"
    android:layout_width="fill_parent"
    android:layout_height="55dp"
    android:layout_alignParentBottom="true"
    android:background="#fff" >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dadada"
        android:id="@+id/view"
        />
    <LinearLayout
        android:id="@+id/line"
        android:layout_below="@id/view"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        >

        <LinearLayout
            android:id="@+id/id_tab1_bottom"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/btn_tab1_bottom"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#0000"
                android:clickable="false"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_main_selected" />

            <TextView
                android:id="@+id/text_tab1_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/select_color"
                android:textSize="14sp"
                android:text="首页" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_tab2_bottom"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/btn_tab2_bottom"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#0000"
                android:clickable="false"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_browse_unselected" />

            <TextView
                android:id="@+id/text_tab2_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浏览"
                android:textColor="@color/un_select_color"
                android:textSize="14sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_tab3_bottom"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/btn_tab3_bottom"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#0000"
                android:clickable="false"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_my_unselected" />

            <TextView
                android:id="@+id/text_tab3_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我"
                android:textColor="@color/un_select_color"
                android:textSize="14sp"
                />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#f6f6f6"
        android:layout_below="@id/line"
        />

</RelativeLayout>